<p id="notice"><%= notice %></p>

<h1>To Dos</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Due date</th>
      <th>Assigned date</th>
      <th>Completed date</th>
      <th>Complete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @to_dos.each do |to_do| %>
      <tr>
        <td><%= to_do.text %></td>
        <td><%= to_do.due_date %></td>
        <td><%= to_do.assigned_date %></td>
        <td><%= to_do.completed_date %></td>
        <td><%= to_do.complete %></td>
        <td><%= link_to 'Show', to_do %></td>
        <td><%= link_to 'Edit', edit_to_do_path(to_do) %></td>
        <td><%= link_to 'Destroy', to_do, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New To Do', new_to_do_path %>
